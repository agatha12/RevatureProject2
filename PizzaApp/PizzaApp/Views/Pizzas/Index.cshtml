        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sauce)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.crust)
            </td>
